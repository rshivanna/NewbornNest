# Server Configuration
PORT=3000
NODE_ENV=development

# AWS S3 Configuration (leave empty for local storage)
# For production: Fill these values and set USE_S3_STORAGE=true
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# Data Storage Configuration
# For local development: use a path outside the application
# For AWS deployment: set USE_S3_STORAGE=true and configure S3 credentials above
DATA_PATH=../data
USE_S3_STORAGE=false

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080
